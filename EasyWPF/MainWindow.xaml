<Window x:Class="EasyWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Easy Save WPF" Height="400" Width="500">
    
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Easy Save WPF" FontSize="20" FontWeight="Bold" Margin="10"/>

            <Button Content="Créer une sauvegarde" Click="OpenCreateBackupWindow" Margin="5"/>
 <Button Content="Lister les sauvegardes" Command="{Binding ListBackupsCommand}" Margin="5"/>
<Button Content="Exécuter les sauvegardes sélectionnées" Command="{Binding RunSelectedBackupCommand}" Margin="5"/>
<Button Content="Supprimer les sauvegardes sélectionnées" Command="{Binding DeleteSelectedBackupCommand}" Margin="5"/>

<ListBox ItemsSource="{Binding Backups}" Height="150" Width="250">
    <ListBox.ItemTemplate>
        <DataTemplate>
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                <TextBlock Text="{Binding Name}" Margin="5,0,0,0"/>
            </StackPanel>
        </DataTemplate>
    </ListBox.ItemTemplate>
</ListBox>

<TextBlock Text="{Binding Status}" Margin="10" Foreground="Red"/>
        </StackPanel>
    </Grid>

</Window>

